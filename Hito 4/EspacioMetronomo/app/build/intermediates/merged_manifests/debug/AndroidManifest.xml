<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.uca.espaciometronomo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="29"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.EspacioMetronomo" >
        <activity
            android:name="es.uca.espaciometronomo.FechasImportantes"
            android:label="@string/title_activity_fechas_importantes"
            android:theme="@style/Theme.EspacioMetronomo.NoActionBar" />

        <receiver android:name="es.uca.espaciometronomo.EspacioMetronomoWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/espacio_metronomo_widget_info" />
        </receiver>

        <activity
            android:name="es.uca.espaciometronomo.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.EspacioMetronomo.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>